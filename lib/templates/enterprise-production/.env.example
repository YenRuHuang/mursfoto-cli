# {{projectName}} 企業級生產管理系統環境配置

# 伺服器配置
PORT=8847
NODE_ENV=development

# JWT 認證密鑰 (生產環境請使用強密碼)
JWT_SECRET={{projectNameKebab}}-secret-key-change-in-production

# 資料庫配置 (未來集成真實資料庫時使用)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME={{projectNameKebab}}_production
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# Mursfoto API Gateway 配置 (可選)
# MURSFOTO_GATEWAY_URL=https://api.mursfoto.com
# MURSFOTO_API_KEY=your_api_key

# 日誌配置
LOG_LEVEL=info

# 安全配置
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=8h

# 功能開關
ENABLE_SWAGGER_DOCS=true
ENABLE_RATE_LIMITING=false
ENABLE_CORS=true

# 生產環境特定配置
# ZEABUR_ENVIRONMENT=production
# HEALTH_CHECK_INTERVAL=30000
