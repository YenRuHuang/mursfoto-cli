{
  "name": "@mursfoto/cli",
  "version": "1.0.0",
  "description": "🚀 Mursfoto API Gateway 生態系統自動化工具 - 快速創建、部署和管理 Mursfoto 服務",
  "main": "index.js",
  "bin": {
    "mursfoto": "./bin/mursfoto.js",
    "@mursfoto/create-project": "./bin/create-project.js"
  },
  "scripts": {
    "start": "node bin/mursfoto.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "nodemon bin/mursfoto.js",
    "build": "echo '✅ CLI build completed'",
    "publish:dry": "npm publish --dry-run",
    "publish:beta": "npm publish --tag beta",
    "publish:prod": "npm publish"
  },
  "keywords": [
    "mursfoto",
    "cli",
    "api-gateway", 
    "automation",
    "project-generator",
    "deployment",
    "zeabur",
    "template",
    "scaffold",
    "productivity"
  ],
  "author": "Mursfoto Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mursfoto/cli.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "axios": "^1.6.0",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "simple-git": "^3.20.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "semver": "^7.5.4",
    "update-notifier": "^7.0.0",
    "boxen": "^5.1.2",
    "gradient-string": "^2.0.2",
    "figlet": "^1.7.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "files": [
    "bin/",
    "lib/",
    "templates/",
    "config/",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  }
}
